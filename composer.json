{
  "name": "roducks/framework",
  "description": "A PHP modern, scalable and light MVC Framework.",
  "keywords": ["framework", "php", "roducks"],
  "license": "GPL",
  "type": "project",
  "repositories": [
    {
      "type": "vcs",
      "url": "git@github.com:roducks/core.git"
    },
    {
      "type": "vcs",
      "url": "git@github.com:roducks/js.git"
    }
  ],
  "require": {
    "php": ">=7.0.0",
    "composer/installers": "^1.0",
    "firebase/php-jwt": "^5.4",
    "guzzlehttp/guzzle": "^6.3",
    "oomphinc/composer-installers-extender": "^2.0",
    "paragonie/sodium_compat": "^1.17",
    "phpmailer/phpmailer": "^6.1",
    "roducks/core": "~1.0",
    "roducks/js": "~1.0",
    "symfony/yaml": "^3.4"
  },
  "extra": {
    "installer-types": [
      "roducks-core", 
      "roducks-js"
    ],
    "installer-paths": {
      "core": ["type:roducks-core"],
      "public/assets/libraries/community/roducksjs": ["type:roducks-js"]
    }
  },
  "autoload": {
    "psr-4": {
      "Roducks\\": "core/",
      "App\\": "app/",
      "Community\\": "community/"
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "config": {
    "preferred-install": "dist",
    "sort-packages": true,
    "optimize-autoloader": true
  },
  "scripts": {
    "post-install-cmd": [
      "sh setup.sh"
    ]
  }
}
